{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/QueryHardwareSecurity.csproj",
                "/consoleLoggerParameters:NoSummary",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/src/QueryHardwareSecurity.csproj",
                "/consoleLoggerParameters:NoSummary",
                "/property:GenerateFullPaths=true",
                "/property:BuildDotNetTool=true"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
